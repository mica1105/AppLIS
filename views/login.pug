extends layout

block content
    .container(style="margin-top:25px")
        .row.justify-content-center
            .col-md-6
                if( codigo == "error")
                    div.alert.alert-danger.d-flex.align-items-center(role="alert") 
                        i.fa.fa-exclamation-triangle.fa-2x
                            span=   mensaje
                if (codigo== 'success')
                    div.alert.alert-success.d-flex.align-items-center(role="alert") 
                        i.fa.fa-check-circle-o.fa-2x
                            span=   mensaje
                .card.text-center.text-white.bg-dark
                    .card-header
                        ul.nav.nav-pills.card-hearder-pills
                            li.nav-item
                                a.nav-link(href="/") Personal 
                            li.nav-item 
                                a.nav-link.active(aria-current="true" href="#") Potal Paciente
                    .card-body
                        h3 
                            i.ace-icon.fa.fa-users
                                span   Potal Pacientes
                        form.row.g-3(role="form", action="/auth/loginPaciente", method="POST")
                            .col-md-12
                                .input-group 
                                    span.input-group-text
                                        i.fa.fa-user-circle
                                    input.form-control(type="email", name="email", placeholder="Email", required)
                            .col-md-12
                                .input-group 
                                    span.input-group-text
                                        i.fa.fa-key
                                    input.form-control(type="password", name="password", placeholder="Contrase√±a", required)

                            .d-flex.justify-content-center.mt-3
                                input.btn.btn-primary(type="submit",value="Entrar")
                                            
                        