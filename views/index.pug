extends layout

block content
  .container(style="margin-top:25px")
    .row.justify-content-center
      .col-md-8
        if( codigo == "error")
          div.alert.alert-danger.d-flex.align-items-center(role="alert") 
            i.fa.fa-exclamation-triangle.fa-2x
              span=   mensaje
        if (codigo== 'success')
          div.alert.alert-success.d-flex.align-items-center(role="alert") 
            i.fa.fa-check-circle-o.fa-2x
              span=   mensaje
        .card.text-center.text-white.bg-dark.mb-3(style="width: 30rem;")
          .card-header
            h3 
              i.ace-icon.fa.fa-users
                span   Login de Usuarios
          .card-body
            form.row.g-3(role="form", action="/login", method="POST")
              .col-md-12
                .input-group 
                  span.input-group-text
                    i.fa.fa-user-circle
                  input.form-control(type="email", name="email", placeholder="Email", required)
              .col-md-12
                .input-group 
                  span.input-group-text
                    i.fa.fa-key
                  input.form-control(type="password", name="password", placeholder="Contraseña", required)

              .d-flex.justify-content-center.mt-3
                input.btn.btn-primary(type="submit",value="Entrar")
                            
              .d-flex.align-items-center.justify-content-center.pb-4
                p.mb-0.me-2 ¿No tiene una cuenta? 
                  a(href='/usuarios/insertar') Registrarse
                            
