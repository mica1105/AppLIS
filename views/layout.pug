doctype html
html
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .container-fluid.px-0
      nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bd-navbar.bg-dark
        .container
          a.navbar-brand(href='/') 
            img.bi.me2.h4(src="/images/logo.png", width="60", height="52", aria-label="Bootstrap") 
          if(usuario)
            ul.navbar-nav.nav.col-12.col-lg-auto.my-2.justify-content-center.my-md-0
              if(usuario.rolId == 1)
                li.nav-item
                  a.nav-link.px-2.h6.me-2(href='/usuarios/') 
                    i.fas.fa-users.fa-2x   
                    p Usuarios
              if(usuario.rolId != 4)  
                li.nav-item
                  a.nav-link.px-2.h6.me-2(href='/pacientes/')     
                    i.fas.fa-user-injured.fa-2x  
                    p Pacientes
                li.nav-item
                  a.nav-link.px-2.h6.me-2(href='/ordenes/')
                    i.fas.fa-file-medical-alt.fa-2x 
                    p Ordenes
                li.nav-item
                  a.nav-link.px-2.h6.me-2(href='/examenes/')
                    i.fas.fa-microscope.alt.fa-2x   
                    p Examenes
              if(usuario.rolId == 4)
                li.nav-item
                  a.nav-link.px-2.h6.me-2(href='/pacientes/perfil') 
                    i.fas.fa-user-injured.fa-2x  Perfil
            div.text-end
              a.btn.btn-outline-primary.me-2(href='/usuarios/perfil')
                i.fa.fa-user-circle.fa-2x
                qu  #{usuario.nombre}

              a.btn.btn-outline-secondary(href='/auth/logout') Logout 
              
    div.b-example-divider           
    block content
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous") 
    script(src="https://kit.fontawesome.com/b96ac5b1bc.js", crossorigin="anonymous")
