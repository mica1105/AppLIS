extends ../layout

block content
    .container(style="margin-top:10px")
        .row.d-flex.justify-content-center
            .col-lg-6.shadow-lg.p-2.mb-5
                div.card.card-custom.border-white.border-0
                    div.card-custom-img(style="background-image: url(http://res.cloudinary.com/d3/image/upload/c_scale,q_auto:good,w_1110/trianglify-v1-cs85g_cc5d2i.jpg);")
                        div.card-custom-avatar
                            img.img-fluid(src="/images/imgPerfil.png" alt="Avatar")
                            h1.text-center= title
                    div.card-body(style="overflow-y: auto")
                        if (mensaje)
                            div.alert.alert-success.d-flex.align-items-center(role="alert") 
                                i.fa.fa-check-circle-o.fa-2x 
                                    span=   mensaje
                        form.form-horizontal.justify-content-center
                            div.form-group.mb-3.row
                                label.col-sm-4.col-form-label.form-control-lg(for="nombre") Nombre:
                                div.col-sm-8
                                    input.form-control-plaintext.form-control-lg(type="text", value=paciente.nombre+" "+
                                    paciente.apellido, readonly)
                            div.form-group.mb-3.row
                                label.col-sm-4.col-form-label.form-control-lg(for="dni") DNI:
                                div.col-sm-8
                                    input.form-control-plaintext.form-control-lg(type="text", value=paciente.dni, readonly)
                            div.form-group.mb-3.row
                                label.col-sm-4.col-form-label.form-control-lg(for="fechaNac") Fecha de Namiento:
                                div.col-sm-8
                                    input.form-control-plaintext.form-control-lg(type="text",value=paciente.getFormattedDate(paciente.fechaNac), readonly) 
                            div.form-group.mb-3.row
                                label.col-sm-4.col-form-label.form-control-lg(for="sexo") Sexo:
                                div.col-sm-8
                                    input.form-control-plaintext.form-control-lg(type="text", value=paciente.sexo, readonly)
                            div.form-group.mb-3.row
                                label.col-sm-4.col-form-label.form-control-lg(for="telefono") Telefono:
                                div.col-sm-8
                                    input.form-control-plaintext.form-control-lg(type="text", value=paciente.telefono, readonly)
                            div.form-group.mb-3.row
                                label.col-sm-4.col-form-label.form-control-lg(for="email") Email:
                                div.col-sm-8
                                    input.form-control-plaintext.form-control-lg(type="email", value=paciente.email, readonly)
                            
                    div.card-footer.d-grid.gap-2.d-md-flex.justify-content-md-center
                        form(action="/pacientes/"+paciente.id, method="get")
                            input.btn.btn-success(value="Actualizar",type="submit")