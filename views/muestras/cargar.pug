extends ../layout

block content
    .container(style="margin-top:25px")
        .row.justify-content-center
            .col-md-8
                .card.text-center
                    .card-header
                        h1= title
                    .card-body
                        .row
                            .col
                                - var url = muestra ? muestra.id+"?_method=PUT" : "";
                                form.row.g-3(action="./"+url, method="POST")

                                    .col-md-12.Text-center
                                        h4 Muestra para Paciente: #{orden ? orden.Paciente.nombre + ' ' + orden.Paciente.apellido : ''}
                                        input(type="hidden", name="ordenId", value=orden.id)
                                    
                                    .col-md-6
                                        label.form-label(for="tipoMuestra") Tipo de Muestra:
                                        select.form-select(name="tipoMuestra", required)
                                            each tipoMuestra in TiposMuestras
                                                if(muestra && muestra.tipoMuestraId == tipoMuestra.id)
                                                    option(value=tipoMuestra.id,selected="true") #{tipoMuestra.tipo}
                                                else
                                                    option(value= tipoMuestra.id) #{tipoMuestra.tipo}
                                    
                                    .col-md-6.form-check
                                        input.form-check-input(type="checkbox",name="estado", value= muestra ? muestra.estado : false)
                                        label.form-check-label(for="estado") Recogida

                                    .col-md-12.text-center
                                        a.btn.btn-danger.btn-lg.me-2(href= paciente ? '/pacientes/' : '/') Cancelar
                                        input.btn.btn-primary.btn-lg(type="submit",value=paciente ? "Actualizar" : "Siguiente")